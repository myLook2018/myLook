<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.mylook.mylook">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MEDIA_CONTENT_CONTROL"
        tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_mylook"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_mylook_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:hardwareAccelerated="true"
        android:largeHeap="true">
        <activity android:name=".login.LoginActivity">
        </activity>
        <activity android:name=".home.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".info.ArticleInfoActivity"></activity>
        <activity android:name=".storeProfile.StoreActivity"></activity>
        <activity android:name=".explore.ExploreActivity"
            android:screenOrientation="portrait" >
            <meta-data android:name="android.app.default_searchable"
                android:value=".SearchableActivity" />

        </activity>
        <activity android:name=".explore.SearchableActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".explore.ExploreActivity">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".explore.ExploreActivity" />
            <meta-data android:name="android.app.searchable"
                android:resource="@xml/searchable"/>

        </activity>

        <activity android:name=".profile.ProfileActivity" android:launchMode="singleInstance"/>
        <activity android:name=".recommend.RecommendationsActivity"
            android:grantUriPermissions="true"
            android:launchMode="singleInstance">
        </activity>
        <activity android:name=".login.RegisterActivity" android:launchMode="singleInstance"/>
        <activity android:name=".recommend.RecommendActivityAddDesc"
            android:parentActivityName=".recommend.RecommendationsActivity"
            android:grantUriPermissions="true">
        </activity>
        <activity android:name=".recommend.RequestRecommendActivity">
        </activity>
        <activity android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat"/>
        <activity android:name=".profile.EditInfoActivity"/>
        <activity android:name=".profile.MyAccountActivity"/>
        <activity android:name=".premiumUser.PremiumRequestActivity"
            android:parentActivityName=".profile.ProfileActivity"
            android:grantUriPermissions="true"/>
        <activity android:name=".premiumUser.PremiumUserProfileActivity"/>
        <activity android:name=".premiumUser.NewPublicationActivity"
            android:parentActivityName=".premiumUser.PremiumUserProfileActivity"
            android:grantUriPermissions="true"/>
        <activity android:name=".premiumUser.PublicationDetail"
            android:parentActivityName=".premiumUser.PremiumUserProfileActivity"/>
        <activity android:name=".closet.ClosetActivity" android:launchMode="singleInstance"/>
        <activity android:name=".closet.OutfitActivity"
            android:parentActivityName=".closet.ClosetActivity"
            android:launchMode="singleInstance"/>
        <activity android:name=".closet.ViewOutfitActivity"/>

        <meta-data android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id"
            tools:replace="android:value"/>
        <activity android:name="com.facebook.FacebookActivity"
            android:configChanges=
                "keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name" />
        <activity
            android:name="com.facebook.CustomTabActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="@string/fb_login_protocol_scheme" />
            </intent-filter>
        </activity>
        <activity android:name=".login.ResetPasswordActivity"
            android:parentActivityName=".login.LoginActivity"/>

    </application>

</manifest>