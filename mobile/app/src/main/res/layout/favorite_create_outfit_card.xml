<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/favorite_create_outfit_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <ImageView
            android:id="@+id/favorite_create_outfit_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/logo_transparente_50"
            android:contentDescription="image1" />

        <TextView
            android:id="@+id/favorite_create_outfit_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_toRightOf="@id/favorite_create_outfit_image"
            android:text="TÃ­tulo" />

        <TextView
            android:id="@+id/favorite_create_outfit_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_alignLeft="@id/favorite_create_outfit_title"
            android:layout_below="@id/favorite_create_outfit_title"
            android:text="Tienda" />

        <CheckBox
            android:id="@+id/favorite_create_outfit_checkbox"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@id/favorite_create_outfit_image" />

    </RelativeLayout>

</android.support.v7.widget.CardView>