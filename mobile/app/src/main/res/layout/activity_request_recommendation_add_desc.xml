<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/login_progressbar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/layout_top"
            android:layout_width="match_parent"
            android:layout_height="51dp">

            <include
                layout="@layout/layout_top_toolbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:layout_conversion_absoluteHeight="0dp"
                tools:layout_conversion_absoluteWidth="0dp"
                tools:layout_editor_absoluteX="0dp"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/btnSend"
                android:layout_width="103dp"
                android:layout_height="48dp"
                android:layout_marginEnd="4dp"
                android:text="Enviar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/layout_center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/txtDescription"
                android:layout_width="345dp"
                android:layout_height="106dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:hint="Agregá una descripción a tu solicitud."
                android:maxLength="200"
                android:singleLine="false"
                app:layout_constraintEnd_toEndOf="@+id/title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgRecommend" />

            <ImageView
                android:id="@+id/imgRecommend"
                android:layout_width="129dp"
                android:layout_height="114dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="60dp"
                android:background="@drawable/outline_photo_24"
                android:clickable="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/editDate"
                android:layout_width="114dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="32dp"
                android:ems="10"
                android:focusable="false"
                android:hint="Fecha Límite"
                android:inputType="textPersonName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtDescription" />

            <EditText
                android:id="@+id/title"
                android:layout_width="205dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:hint="Título"
                android:inputType="textPersonName"
                app:layout_constraintBottom_toTopOf="@+id/txtDescription"
                app:layout_constraintStart_toEndOf="@+id/imgRecommend"
                app:layout_constraintTop_toTopOf="@+id/imgRecommend"
                app:layout_constraintVertical_bias="1.0" />

            <com.github.clans.fab.FloatingActionMenu
                android:id="@+id/fabMenu"
                android:layout_width="233dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:menu_animationDelayPerItem="55"
                app:menu_backgroundColor="@color/fui_transparent"
                app:menu_buttonSpacing="0dp"
                app:menu_colorNormal="@color/accent"
                app:menu_colorPressed="@color/accent"
                app:menu_colorRipple="@color/accent"
                app:menu_fab_size="normal"
                app:menu_icon="@drawable/ic_add_photo"
                app:menu_labels_colorNormal="@color/fui_transparent"
                app:menu_labels_colorPressed="@color/fui_transparent"
                app:menu_labels_colorRipple="@color/fui_transparent"
                app:menu_labels_cornerRadius="3dp"
                app:menu_labels_ellipsize="none"
                app:menu_labels_hideAnimation="@anim/fab_slide_out_to_right"
                app:menu_labels_margin="0dp"
                app:menu_labels_maxLines="-1"
                app:menu_labels_padding="8dp"
                app:menu_labels_position="left"
                app:menu_labels_showAnimation="@anim/fab_slide_in_from_right"
                app:menu_labels_showShadow="true"
                app:menu_labels_singleLine="false"
                app:menu_labels_textColor="@color/black"
                app:menu_labels_textSize="15sp"
                app:menu_openDirection="up"
                app:menu_shadowColor="#66aff198"
                app:menu_shadowRadius="4dp"
                app:menu_shadowXOffset="1dp"
                app:menu_shadowYOffset="4dp"
                app:menu_showShadow="true">

                <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/photoFloating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/outline_photo_camera_24_white"
                    android:tint="@color/accent"
                    app:fab_label="Cámara"
                    app:fab_size="mini"
                    app:rippleColor="@color/accent" />

                <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/galleryFloating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/outline_photo_24_white"
                    android:tint="@color/accent"
                    app:fab_label="Galería"
                    app:fab_size="mini" />
            </com.github.clans.fab.FloatingActionMenu>

        </android.support.constraint.ConstraintLayout>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
