<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:id="@+id/layout_top"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_alignParentTop="true">
            <include layout="@layout/layout_top_toolbar" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/layout_center"
            android:layout_width="match_parent"
            android:layout_height="515dp">

            <Switch
                android:id="@+id/btnUbication"
                android:layout_width="175dp"
                android:layout_height="42dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="90dp"
                android:layout_marginEnd="22dp" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/txtDescription"
                android:layout_width="252dp"
                android:layout_height="106dp"
                android:layout_above="@+id/editDate"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="-160dp"
                android:hint="Agregá una descripción a tu solicitud."
                android:singleLine="false" />

            <ImageView
                android:id="@+id/imgRecommend"
                android:layout_width="129dp"
                android:layout_height="107dp"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/txtDescription"
                android:clickable="true"
                tools:background="@color/purple" />

            <Button
                android:id="@+id/btnSend"
                android:layout_width="346dp"
                android:layout_height="39dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="16dp"
                android:text="Enviar" />

            <TextView
                android:id="@+id/lblUbication"
                android:layout_width="175dp"
                android:layout_height="43dp"
                android:layout_alignTop="@+id/btnUbication"
                android:layout_toStartOf="@+id/btnUbication"
                android:text="Agregar ubicación" />

            <EditText
                android:id="@+id/editDate"
                android:layout_width="114dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/btnSend"
                android:layout_marginTop="197dp"
                android:ems="10"
                android:focusable="false"
                android:inputType="textPersonName"
                android:text="Date" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layout_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <include layout="@layout/layout_bottom_navigation_view" />
        </LinearLayout>

    </RelativeLayout>





</android.support.constraint.ConstraintLayout>
