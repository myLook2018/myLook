<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:id="@+id/layout_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">

            <include layout="@layout/layout_top_toolbar" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/layout_bottom"
            android:layout_below="@+id/layout_top">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imgRecommend"
                    android:layout_width="129dp"
                    android:layout_height="122dp"
                    android:clickable="true"
                    tools:background="@color/purple" />

                <Button
                    android:id="@+id/btnSend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="16dp"
                    android:text="Enviar" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputLayout"
                    android:layout_width="230dp"
                    android:layout_height="138dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="149dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/txtDescription"
                        android:layout_width="match_parent"
                        android:layout_height="164dp"
                        android:layout_below="@+id/textInputLayout"
                        android:layout_alignStart="@+id/textInputLayout"
                        android:layout_marginTop="-16dp"
                        android:hint="Agregá una descripción a tu solicitud."
                        android:singleLine="false" />
                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:id="@+id/lblLimitDate"
                    android:layout_width="175dp"
                    android:layout_height="43dp"
                    android:layout_below="@+id/textInputLayout"
                    android:layout_alignStart="@+id/lblUbication"
                    android:layout_marginStart="-12dp"
                    android:layout_marginTop="-2dp"
                    android:text="Días de duración" />

                <EditText
                    android:id="@+id/txtLimitDate"
                    android:layout_width="202dp"
                    android:layout_height="43dp"
                    android:layout_below="@+id/textInputLayout"
                    android:layout_alignStart="@+id/lblUbication"
                    android:layout_marginStart="147dp"
                    android:layout_marginTop="0dp"
                    android:ems="10"
                    android:inputType="date" />

                <TextView
                    android:id="@+id/lblUbication"
                    android:layout_width="175dp"
                    android:layout_height="43dp"
                    android:layout_alignTop="@+id/btnUbication"
                    android:layout_toStartOf="@+id/btnUbication"
                    android:text="Agregar ubicación" />

                <Switch
                    android:id="@+id/btnUbication"
                    android:layout_width="175dp"
                    android:layout_height="42dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="22dp"
                    android:layout_marginBottom="90dp" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <include layout="@layout/layout_bottom_navigation_view" />
        </LinearLayout>

    </RelativeLayout>





</android.support.constraint.ConstraintLayout>
