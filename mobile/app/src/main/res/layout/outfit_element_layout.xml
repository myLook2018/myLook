<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/outfit_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/outfit_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textSize="20sp"
            android:text="Name" />

        <ImageView
            android:id="@+id/outfit_article_image1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            android:layout_below="@id/outfit_name"
            android:layout_alignParentStart="true"
            android:src="@drawable/logo_transparente_50"
            android:contentDescription="image1" />

        <ImageView
            android:id="@+id/outfit_article_image2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignBottom="@id/outfit_article_image1"
            android:layout_toEndOf="@id/outfit_article_image1"
            android:src="@drawable/logo_transparente_50"
            android:contentDescription="image2"/>

        <ImageView
            android:id="@+id/outfit_article_image3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignBottom="@id/outfit_article_image2"
            android:layout_toEndOf="@id/outfit_article_image2"
            android:src="@drawable/logo_transparente_50"
            android:contentDescription="image3"/>

        <TextView
            android:id="@+id/outfit_extra_articles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/outfit_article_image3"
            android:layout_alignBottom="@id/outfit_article_image3"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:textSize="50sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>